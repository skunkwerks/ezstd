{pre_hooks, [{"(linux|darwin|freebsd)", compile, "make compile_nif"}]}.
{post_hooks, [{"(linux|darwin|freebsd)", clean, "make clean_nif"}]}.

{artifacts, ["priv/ezstd_nif.so"]}.

{project_plugins, [rebar3_hex, rebar3_ex_doc]}.

{deps, []}.

{erl_opts, [
    warnings_as_errors,
    warn_export_all
]}.

{profiles, [
    {test, [
        {erl_opts, [
            debug_info,
            nowarn_export_all
        ]}
    ]}
]}.

{edoc_opts, [
    {private, false}
]}.

{ex_doc, [
     {source_url, <<"https://github.com/silviucpp/ezstd">>},
     {main, <<"ezstd">>}
]}.

{hex, [
    {doc, #{provider => ex_doc}}
]}.
